    SQL.Strings = (
      'SELECT'
      'content.id,'
      'content.caption,'
      'content.content,'
      'section.id as section_id,'
      'section.section,'
      'preset.sitename,'
      'preset.dirpath,'
      'preset.headtpl,'
      'preset.bodytpl,'
      'preset.sectiontpl,'
      'preset.itemtpl,'
      'preset.ufn1,'
