      'preset.ufn2,'
      'content.uf2,'
      'preset.ufn3,'
      'content.uf3,'
      'preset.ufn4,'
      'content.uf4,'
      'preset.ufn5,'
      'content.uf5,'
      'preset.ufn6,'
      'content.uf6,'
      'preset.ufn7,'
      'content.uf7'
      ' from content'
      'LEFT JOIN section'
      'ON content.section = section.id'
      'LEFT JOIN preset'
      'ON section.preset = preset.id'
    )
